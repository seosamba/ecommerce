                        console.log('old');
                        console.log(oldToken);

                        $('.edit-client-profile-address-'+ addrType + '-' + oldToken).data('clientToken', addressId).attr('data-client-token',addressId);
                        $('[data-client-param="client-' + clientEditParam + '-' + addrType + '-'+ oldToken+'"]').show();
                        $('.edit-client-' + clientEditParam + '-' + addrType + '-'+ oldToken).hide();
                        $('.client-' + clientEditParam + '-' + addrType + '-'+ oldToken).find('.inline-data').text(editedValue).show();
                        smoke.signal('<?php echo $this->translate('Saved');?>');
                    }
                });
            }, function () {
