    function sendAjax(fieldName, fieldValue, addrType, clientToken, oldToken, countryCode, thisEl) {
        $.ajax({
            type: "POST",
            url: $('#website_url').val() + 'plugin/shopping/run/editUserProfileAddress/',
            dataType: "json",
            data: {
                fieldName:      fieldName,
                fieldValue:     fieldValue,
                userId:         $('#userId').val(),
                secureToken:    $('.secure-token-user').val(),
                addressType:    addrType,
                clientToken:    clientToken,
                clientOldToken: oldToken,
                countryCode:    countryCode
            }
        }).done(function (response) {
            var oldToken = response.responseText.oldToken;
            if (response.error == 1) {
                showMessage(response.responseText.respText, true, 5000);
            } else {
                var addressId = response.responseText.newToken;
                $('#'+oldToken).data('client-token', addressId);
                $(thisEl).data('old-value', fieldValue);
                showMessage('<?php echo $this->translate('Saved');?>', false, 5000);
            }
        });
    }

    function editUserProfileSendAjax(clientEditParam, editedValue) {
        $.ajax({
            type: "POST",
            url: $('#website_url').val()+'plugin/shopping/run/editUserProfile/',
            dataType: "json",
            data: {
                profileElement:clientEditParam,
                profileValue:editedValue,
                userId:$('#userId').val(),
                secureToken:$('.secure-token-user').val()
            }
        }).done(function(response) {
            if(response.error == 1){
                smoke.alert(response.responseText,{'classname':'errors'});
            }else{
                if(clientEditParam != 'prefix') {
                    $('[data-client-param="client-'+clientEditParam+'"]').show();
                    $('.edit-client-'+clientEditParam+'-input').hide();
                    $('.client-'+clientEditParam).find('.inline-data').text(editedValue).show();
                }
                smoke.signal('<?php echo $this->translate('Saved');?>');
            }
        });
        return false;
    }

