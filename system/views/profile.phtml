        var clientEditParam = $(this).data('client-param');
        var editedValue = $(this).val();
        var addrType = $(this).data('client-type');
        var clientToken = $(this).data('client-token');
        var oldToken = $(this).data('old-token');
        showConfirm('<?php echo $this->translate("Are you sure you would like to change the profile data?"); ?>',
            function (){
                $.ajax({
                    type: "POST",
                    url: $('#website_url').val() + 'plugin/shopping/run/editUserProfileAddress/',
                    dataType: "json",
                    data: {
                        profileField: clientEditParam,
                        profileValue: editedValue,
                        userId: $('#userId').val(),
                        secureToken: $('.secure-token-user').val(),
                        addressType: addrType,
                        clientToken: clientToken,
                        clientOldToken: oldToken
                    }
                }).done(function (response) {
